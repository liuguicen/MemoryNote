<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WordDetailItemName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textSize">@dimen/text_size_very_very_small</item>
    </style>

    <style name="WordDetailEditItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="StrangeDegreeItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">40sp</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:textColor">@color/color_add_strange</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">@dimen/strange_degree_item_margin</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">@dimen/strange_degree_item_margin</item>
    </style>

    <style name="LvItemWordStrange">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_add_strange</item>
        <item name="android:paddingStart">@dimen/normal_margin</item>
        <item name="android:paddingEnd">@dimen/normal_margin</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="SyncBtn">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:background">@mipmap/sync</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginStart">20dp</item>
    </style>

    <style name="text_user_name_password">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="setting_user_name_password_not_editable" parent="text_user_name_password">
    </style>

    <style name="setting_user_name_password_editable" parent="text_user_name_password">
        <item name="android:editable">false</item>
        <item name="android:layout_marginStart">@dimen/big_margin</item>
    </style>

    <style name="DownloadBtn">
        <item name="android:layout_height">37dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/normal_margin</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:background">@drawable/btn_bg_download</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:paddingEnd">@dimen/normal_margin</item>
        <item name="android:paddingStart">@dimen/normal_margin</item>
    </style>

    <style name="my_tool_bar">
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@android:color/holo_blue_dark</item>
    </style>

    >

    <style name="OpenVipGroupLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/background_round_corner_white</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="OpenVipPrivilegesTv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>


    <style name="setting_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_deep_black</item>
    </style>

    <style name="import_choosing_item_Layout">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
