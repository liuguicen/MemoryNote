<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">





    <TextView
        style="@style/text_user_name_password"
        android:id="@+id/setting_user_name_name"
        android:text="用户名:"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/setting_user_name_input"
        style="@style/setting_user_name_password_editable"
        app:layout_constraintTop_toBottomOf="@+id/setting_user_name_name"
        app:layout_constraintStart_toEndOf="@id/setting_user_name_name"
        />

    <TextView
        android:id="@+id/setting_password_name"
        style="@style/text_user_name_password"
        android:layout_marginTop="@dimen/normal_margin"
        android:text="密码："
        app:layout_constraintTop_toBottomOf="@id/setting_user_name_name"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/setting_password_input"
        style="@style/setting_user_name_password_editable"
        app:layout_constraintTop_toBottomOf="@+id/setting_user_name_name"
        app:layout_constraintStart_toEndOf="@id/setting_password_name"
        />

    <TextView
        android:id="@+id/setting_modify_name_password"
        app:layout_constraintTop_toBottomOf="@id/setting_password_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/setting_verify_modify"
        style="@style/text_user_name_password"
        android:text="修改" />

    <TextView
        android:id="@+id/setting_verify_modify"
        style="@style/text_user_name_password"
        app:layout_constraintTop_toBottomOf="@id/setting_password_input"
        app:layout_constraintStart_toEndOf="@id/setting_modify_name_password"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="确认"
        />

    <TextView
        android:id="@+id/tv_app_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setting_user_name_name"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="25sp"/>
</android.support.constraint.ConstraintLayout>