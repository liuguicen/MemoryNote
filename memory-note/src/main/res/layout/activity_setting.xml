<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/btn_upload_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/btn_bg_edit"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingEnd="@dimen/normal_margin"
                android:paddingStart="@dimen/normal_margin"
                android:paddingTop="5dp"
                android:text="@string/upload_date"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size_normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_upload_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin"
                android:gravity="center"
                android:textSize="@dimen/text_size_small"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_upload_data" />


            <TextView
                android:id="@+id/setting_user_name_name"
                style="@style/text_user_name_password"
                android:text="用户名:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_upload_result" />

            <EditText
                android:id="@+id/setting_user_name_input"
                style="@style/setting_user_name_password_editable"
                app:layout_constraintStart_toEndOf="@id/setting_user_name_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_upload_result" />

            <TextView
                android:id="@+id/setting_password_name"
                style="@style/text_user_name_password"
                android:layout_marginTop="@dimen/normal_margin"
                android:text="密码："
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/setting_user_name_name" />

            <EditText
                android:id="@+id/setting_password_input"
                style="@style/setting_user_name_password_editable"
                app:layout_constraintStart_toEndOf="@id/setting_password_name"
                app:layout_constraintTop_toBottomOf="@+id/setting_user_name_name" />

            <TextView
                android:id="@+id/setting_modify_name_password"
                style="@style/text_user_name_password"
                android:text="修改"
                app:layout_constraintEnd_toStartOf="@+id/setting_verify_modify"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/setting_password_input" />

            <TextView
                android:id="@+id/setting_verify_modify"
                style="@style/text_user_name_password"
                android:text="确认"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/setting_modify_name_password"
                app:layout_constraintTop_toBottomOf="@id/setting_password_input" />

            <TextView
                android:id="@+id/tv_app_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/setting_verify_modify" />

            <TextView
                android:id="@+id/tv_download_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/very_big_margin"
                android:gravity="center"
                android:text="未下载过"
                android:textSize="@dimen/text_size_small"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_app_guide" />

            <TextView
                android:id="@+id/btn_download_continue"
                style="@style/DownloadBtn"
                android:text="@string/download_continue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_download_all"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_download_result" />

            <TextView
                android:id="@+id/btn_download_all"
                style="@style/DownloadBtn"
                android:text="@string/download_all"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btn_download_continue"
                app:layout_constraintTop_toBottomOf="@+id/tv_download_result" />

            <TextView
                android:id="@+id/btn_export_to_sd"
                style="@style/DownloadBtn"
                android:text="@string/export_data_sd"
                android:background="@drawable/btn_bg_edit"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_download_all"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_download_continue" />

            <TextView
                android:id="@+id/btn_import_to_sd"
                style="@style/DownloadBtn"
                android:background="@drawable/btn_bg_edit"
                android:text="@string/import_data_sd"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btn_download_continue"
                app:layout_constraintTop_toBottomOf="@+id/btn_download_all" />

        </android.support.constraint.ConstraintLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>