<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/app_agreement_bop_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        style="@style/my_tool_bar"
        android:layout_width="match_parent"
        />

    <ImageView
        android:id="@+id/app_agreement_return_icon"
        app:layout_constraintTop_toTopOf="@+id/app_agreement_bop_bg"
        app:layout_constraintBottom_toBottomOf="@+id/app_agreement_bop_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:src="@drawable/ic_arrow_back_white"
        android:layout_width="wrap_content"
        style="@style/my_tool_bar"/>

    <TextView
        app:layout_constraintTop_toTopOf="@+id/app_agreement_return_icon"
        app:layout_constraintBottom_toBottomOf="@+id/app_agreement_return_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/app_agreement_title"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"/>

    <ScrollView
        app:layout_constraintTop_toBottomOf="@id/app_agreement_bop_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/app_agreement_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"/>
    </ScrollView>
</android.support.constraint.ConstraintLayout>